{
  "name": "@react-awesome-query-builder/ui",
  "version": "6.0.0",
  "description": "React UI",
  "author": "Denis Oblogin <ukrbublik@gmail.com> (https://github.com/ukrbublik)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ukrbublik/react-awesome-query-builder.git",
    "directory": "packages/ui"
  },
  "main": "./lib/index.js",
  "module": "./modules/index.jsx",
  "types": "./modules/index.d.ts",
  "exports": {
    ".": {
      "types": "./modules/index.d.ts",
      "import": "./modules/index.jsx",
      "require": "./lib/index.js"
    },
    "./package.json": "./package.json",
    "./css/styles.css": "./lib/css/styles.css",
    "./css/compact_styles.css": "./lib/css/compact_styles.css",
    "./css/styles.scss": "./css/styles.scss",
    "./css/compact_styles.scss": "./css/compact_styles.scss",
    "./css/antd.less": "./lib/css/antd.less"
  },  
  "scripts": {
    "prepare": "yarn build-npm",
    "build-npm": "sh ./scripts/build-npm.sh",
    "build-global": "NODE_ENV=production COMPRESS=1 webpack",
    "build": "yarn build-npm && yarn build-global",
    "lint": "yarn eslint && yarn tsc",
    "tsc": "tsc -p . --noEmit",
    "eslint": "eslint --ext .jsx --ext .js --ext .tsx --ext .ts  ./modules/",
    "lint-fix": "eslint --ext .jsx --ext .js --ext .tsx --ext .ts --fix  ./modules/"
  },
  "dependencies": {
    "@react-awesome-query-builder/core": "*",
    "lodash": "^4.17.21",
    "classnames": "^2.3.1",
    "prop-types": "^15.7.2",
    "react-redux": "^7.2.2",
    "redux": "^4.2.0"
  },
  "peerDependencies": {
    "react": "^16.8.4 || ^17.0.1 || ^18.0.0",
    "react-dom": "^16.8.4 || ^17.0.1 || ^18.0.0"
  },
  "devDependencies": {
    "moment-locales-webpack-plugin": "^1.2.0",
    "@types/prop-types": "^15.7.3",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
