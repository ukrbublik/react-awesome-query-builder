{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "jsx": "preserve",
    "lib": [
      "es2015",
      "dom",
      "dom.iterable"
    ],
    "allowJs": true,
    "outDir": "ts_out",
    "noEmit": true,

    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,

    "esModuleInterop": true,
    "moduleResolution": "node",
    // there is 1 null check issue with rc-picker
    "skipLibCheck": true,
    
    "paths": {
      "@react-awesome-query-builder/core": ["../core/modules"],
      "@react-awesome-query-builder/ui": ["../ui/modules"],
      "react": ["./node_modules/@types/react"],
      "react-dom": ["./node_modules/@types/react-dom"],
    }
  },
  "include": [
    "modules/**/*"
  ]
}
