{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "lib": [
      "es2015"
    ],
    "allowJs": true,
    "outDir": "ts_out",
    "noEmit": true,

    "strict": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,

    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": false
  },
  "include": [
    "modules/**/*"
  ]
}
